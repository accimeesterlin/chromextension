{
    "name": "Tutor Chrome Extension",
    "version": "1.5",
    "description": "Build a basic extension",
    "manifest_version": 2,
    "permissions": ["contextMenus", "activeTab", "declarativeContent", "storage"],
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Tutor App"
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["moment.js", "jquery.js", "autoprefill.js"],
        "run_at": "document_end"
    }],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}